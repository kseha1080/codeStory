<h1>Your codeStories</h1>
<div class="row">
  {{#each stories}}
    <div class="col s12 m6">
      <div class="card">
        <div class="card-image">
          {{#if user}}
          {{{editIcon user.id ../user.id id}}}
          {{/if}}
        </div>
        <div class="card-content center-align">
          <h5>{{title}}</h5>
          <p class="story-text">{{{description}}}</p>
          <p class="story-text">{{{body}}}</p>
          <br>
          <div class="chip">
            <img src="{{user.image}}">
            <a href="/stories/user/{{user.id}}">{{user.firstName}} {{user.lastName}}</a>
          </div>
        </div>
        <div class="card-action center-align">
          <a class="btn grey" href="/stories/show/{{id}}">Read More</a>
        </div>
      </div>
    </div>
  {{else}}
    <p class="gugi">No image was uploaded</p>
  {{/each}}
</div>