<div class="row">
  <div class="col s12 m10">
    <h3>{{story.title}}</h3>
    <div class="card story">
      <div class="card-content">
        <span class="card-title">{{story.date}}</span>
        {{{story.body}}}
      </div>
    </div>
  </div>
  <br><br><br>
  <div class="col s12 m2">
    <div class="card center-align">
      <div class="card-content">
        <span class="card-title">{{story.user.firstName}}{{story.user.lastName}}</span>
        <img src="{{story.user.image}}" class='square responsive-img'>
      </div>
      <div class="card-action">
        <a href="/stories/user/{{story.user.id}}">More From {{story.user.firstName}}</a>
      </div>
    </div>
  </div>
</div>